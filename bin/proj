#!/bin/bash

proj=$1

update_repo() {
  git fetch

  git pull origin

  echo "updating submodules"
  git submodule update --init --recursive

  if [ -f "package.json" ]; then
    echo "updating node_modules"
    npm install && npm update
  fi

  if [ -f "bower.json" ]; then
    echo "updating bower"
    bower install && bower update
  fi

  if [ -f "Gruntfile.js" ]; then
    echo "running grunt"
    grunt
  fi
}

if [ -d ".git" ]; then
  echo "updating repo"
  git pull
  update_repo
else

  if [ -z "$proj" ]; then
    echo "name/repo required"
    exit 1
  fi

  arr=(${proj/\// })
  name=${arr[0]}
  repo=${arr[1]}

  if [ -z "$repo" ]; then
    echo "name/repo required"
    exit 1
  fi

  if [ ! -d "$repo" ]; then
    git clone git@github.com:$proj.git
    cd $repo
  fi

  update_repo

fi
