#!/bin/bash

if [ -z "$DOTFILES" ]; then
  export DOTFILES="$HOME/dotfiles"
fi

cd $DOTFILES
git submodule update --init

usage() {
  cat <<-EOF

  Usage: dotfiles [options]

  Options:

    --symlinks           setup symlinks
    --osx                write osx defaults
    --brew               install and setup homebrew and apps
    --remap              configure keyremap4mac
    --node               install and setup node and libs
    -h, --help           output help information


EOF
}


if [ $# == 0 ]; then
  SYMLINKS=1
  OSX=1
  BREW=1
  REMAP=1
  NODE=1
fi

while test $# -ne 0; do
  arg=$1
  shift
  case $arg in
    -h|--help)
      usage
      exit
      ;;
    --symlinks)
      SYMLINKS=1
      ;;
    --osx)
      OSX=1
      ;;
    --brew)
      BREW=1
      ;;
    --fonts)
      FONTS=1
      ;;
    --remap)
      REMAP=1
      ;;
    --node)
      NODE=1
      ;;
  esac
done

# Load utils
source $DOTFILES/lib/utils

# Symlinks
if [ "$SYMLINKS" == 1 ]; then
  echo "Creating Symlinks..."
  . $DOTFILES/lib/symlinks
  source ~/.bash_profile
fi

# OSX Defaults
if [ "$OSX" == 1 ]; then
  echo "Setting Mac OSX Defaults..."
  . $DOTFILES/lib/osx
fi

# Brew
if [ "$BREW" == 1 ]; then
  echo "Installing Homebrew..."
  . $DOTFILES/lib/brew
fi

# Fonts
if [ "$FONTS" == 1 ]; then
  echo "Installing Fonts..."
  cp ${DOTFILES}/lib/fonts/*.ttf ~/Library/Fonts/
fi

# Keyboard Remap
if [ "$REMAP" == 1 ]; then
  echo "Configuring KeyRemap4Mac..."
  . $DOTFILES/lib/keyremap
fi

# Node
if [ "$NODE" == 1 ]; then
  echo "Node..."
  . $DOTFILES/lib/node
fi
