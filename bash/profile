CDPATH=$CDPATH:~:$HOME/code:$HOME/clients
shopt -s cdspell

f_old(){ 
  if [ -n "$TMUX" ] && [ "$PWD" != "$LPWD" ] && [ "$TMUX_FIXED" != "1" ];then 
    LPWD="$PWD";
    WINDOW_NAME=`tmux lsw -F '#{window_name}|#{window_active}'`
    if grep -q "\*|1" <<< "$WINDOW_NAME"; then
      TMUX_FIXED="1"
    else
      tmux rename-window ${PWD//*\//};
    fi
  fi 
};
